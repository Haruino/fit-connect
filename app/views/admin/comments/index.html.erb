<div class="row">
  <div class="col">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark text-center">
          <tr>
            <th class="col-2">ユーザー名</th>
            <th class="col-2">スレッド</th>
            <th class="col-4">コメント</th>
            <th class="col-2">作成日時</th>
            <th class="col-1"></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td class= "text-center"><%= comment.user.name %></td>
              <td class= "text-center"><%= link_to comment.post_thread.title, admin_post_thread_path(comment.post_thread) %></td>
              <td><%= truncate(comment.comment, length: 50) %></td>
              <td class="text-center"><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
              <td class="text-center">
                <%= link_to "削除", admin_post_thread_comment_path(post_thread_id: comment.post_thread_id, id: comment.id, from_page: "comments_index"), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mt-3"><%= paginate @comments %></div>
    </div>
  </div>
</div>