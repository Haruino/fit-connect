<div class="container">
  <div class="row">
    <div class="col">
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>ユーザー名</th>
              <th>コメント</th>
              <th>作成日時</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td><%= comment.id %></td>
                <td><%= comment.user.name %></td>
                <td><%= comment.comment %></td>
                <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td class="text-center">
                  <%= link_to "削除", admin_post_thread_comment_path(post_thread_id: comment.post_thread_id, id: comment.id, from_page: "comments_index"), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
