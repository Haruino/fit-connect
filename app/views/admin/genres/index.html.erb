<div class="container">
  <div class="row">
    <h1 class="col-12 col-md-8 offset-md-2 text-center">ジャンル一覧・追加</h1>
  </div>
  <%= render "admin/shared/error_messages", resource: @genre %>
  <%= form_with model: @genre, url: admin_genres_path, class: 'form-group mt-4' do |f| %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 mb-4"> 
        <%= f.text_field :name, size: 50, placeholder: 'ジャンル名を入力してください', class: 'form-control' %>
      </div>
      <div class="col-12 col-md-2 mt-2 mt-md-0"> 
        <%= f.submit "新規登録", class: 'btn btn-success btn-block' %>
      </div>
    </div>
  <% end %>
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="row">
        <% @genres.each do |genre| %>
          <div class="col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title text-center"><%= genre.name %></h5>
                <div class="text-center">
                  <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
