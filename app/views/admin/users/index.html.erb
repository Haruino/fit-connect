<div class="container">
  <div class="row">
    <div class="col">
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark text-center">
            <tr>
              <th class="col-1">ID</th>
              <th class="col-1"></th>
              <th class="col-4">名前</th>
              <th class="col-4">メールアドレス</th>
              <th class="col-2">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.reject { |user| user.guest_user? }.each do |user| %>
              <tr>
                <td class="text-center"><%= user.id %></td>
                <td class="text-center"><%= image_tag user.get_profile_image(40, 40), class: "img-fluid rounded-circle" %></td>
                <td>
                  <%= link_to admin_user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td class="text-center"><%= user.active ? "アクティブ" : "退会済み" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
