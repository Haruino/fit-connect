<div class="container">
  <div class="row">
    <div class="offset-2 col-8">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-center"><%= @post_thread.title %></h2>
        <%= link_to "削除する", post_thread_path(@post_thread), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger mr-3 align-self-start" %>
      </div>
      <div class="text-right">
        <span>
          <%= @post_thread.user.name %>
          <%= image_tag @post_thread.user.get_profile_image(100, 100), class: "rounded-circle ml-4" %>
        </span>
      </div>
      <p><%= @post_thread.body %></p>
    </div>
  </div>
</div>
