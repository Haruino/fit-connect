<div class="row">
  <div class="col">
    <h1>会員情報編集</h1>
    <%= form_with model: @user, url: user_path(current_user), method: :patch do |f| %>
      <%= render "public/shared/error_messages", resource: @user %>
      <div class="field">
        <%= f.label :profile_image %><br />
        <%= f.file_field :profile_image, accept: "image/*" %>  
      </div>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :introduction %><br />
        <%= f.text_area :introduction %>
      </div>
      
      <div class="actions">
        <%= f.submit "編集する" %>
      </div>
    <% end %>
  </div>
</div>  