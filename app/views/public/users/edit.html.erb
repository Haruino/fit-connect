<%= render "public/shared/error_messages", resource: @user %>
<div class="row">
  <div class="offset-3 col-6">
    <h1>ユーザー情報編集</h1>
    <%= form_with model: @user, url: user_path(current_user), method: :patch do |f| %>
      <div class="field form-group">
        <%= f.label :profile_image, class: "form-label" %><br />
        <%= f.file_field :profile_image, class: "form-control", accept: "image/*" %>  
      </div>
      <div class="field form-group">
        <%= f.label :name, class: "form-label" %><br />
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field form-group">
        <%= f.label :introduction, class: "form-label" %><br />
        <%= f.text_area :introduction, rows:6, class: "form-control" %>
      </div>
      
      <div class="actions">
        <%= f.submit "編集する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>  