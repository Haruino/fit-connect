<% if post_thread.favorited_by?(current_user) %>
  <%= link_to post_thread_favorites_path(post_thread), method: :delete, remote: true, data: {"turbolinks" => false}, class: "favorite-btn text-light" do %>
    <p class="mr-4 btn btn-secondary">
      ブックマークを解除
    </p>
  <% end %>
<% else %>
  <%= link_to post_thread_favorites_path(post_thread), method: :post, remote: true, data: {"turbolinks" => false}, class: "favorite-btn text-dark" do %>
    <p class="mr-4 btn btn-outline-secondary">
      ブックマークに登録
    </p>
  <% end %>
<% end %>