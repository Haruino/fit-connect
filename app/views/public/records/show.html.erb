<h2 class="mb-4 text-center">本日のトレーニング</h2>
<div class="row">
  <% @todays_records.each do |name, records| %>
  <div class="col-md-6 mb-4">
    <table class="table table-bordered">
      <thead>
        <tr class="thead-dark">
          <th colspan="5" class="text-center"><%= name %></th>
        </tr>
        <tr>
          <th class="col-1 text-center"></th>
          <th class="col-2 text-center">重量</th>
          <th class="col-2 text-center">回数</th>
          <th class="text-center">メモ</th>
          <th class="col-2 text-center"></th>
        </tr>
      </thead>
      <tbody>
        <% records.each do |record, user| %>
          <tr>
            <td class="text-center"><%= record[:set] %></td>
            <td class="text-center"><%= record[:weight] %></td>
            <td class="text-center"><%= record[:rep] %></td>
            <td></td>
            <td><%= link_to "削除", user_records_path, method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="col-6">
    <%= form_with model: @record, url: user_records_path, method: :post, class: "mb-4" do |f| %>
      <div class="form-group">
        <%= f.label :part_id, "部位", class: "form-label" %>
        <%= f.collection_select(:part_id, Part.all, :id, :name, {}, {class: "form-controll custom-select"}) %>
      </div>
      <div class="form-group">
        <%= f.label :exercise_id, "種目", class: "form-label" %>
        <%= f.collection_select(:exercise_id, Exercise.all, :id, :name, {}, {class: "form-controll custom-select"}) %>
      </div>
      <div class="form-group">
        <%= f.label :weight, "重量", class: "form-label" %>
        <%= f.text_field :weight, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :rep, "回数", class: "form-label" %>
        <%= f.text_field :rep, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "トレーニングを記録", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-6">
    <%= form_with model: @part, url: user_records_parts_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.label :name, "部位", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "種目追加", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= form_with model: @exercise, url: user_records_exercises_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.label :name, "種目", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "種目追加", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
