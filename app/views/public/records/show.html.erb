<h2 class="mb-4 text-center">本日のトレーニング</h2>
<div class="row">
  <% @todays_records.each do |name, records| %>
  <div class="col-md-6 mb-4">
    <table class="table table-bordered">
      <thead>
        <tr class="thead-dark">
          <th colspan="6" class="text-center"><%= name %></th>
        </tr>
        <tr>
          <th class="col-1 text-center"></th>
          <th class="col-2 text-center">重量</th>
          <th class="col-2 text-center">回数</th>
          <th class="text-center">メモ</th>
          <% if @user == current_user %>
            <th class="col-2 text-center"></th>
            <th class="col-2 text-center"></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% records.each do |record| %>
          <tr class="record-row">
            <td class="text-center"><%= record[:set] %></td>
            <td class="text-center"><%= record[:weight] %>kg</td>
            <td class="text-center"><%= record[:rep] %>rep</td>
            <td><%= record[:memo] %></td>
            <% if @user == current_user %>
              <td class="text-center"><button class="edit-btn btn btn-x btn-info">編集</button></td>
              <td class="text-center"><%= link_to "削除", user_record_path(@user, record), method: :delete, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
          <tr class="form-row" style="display:none;">
            <td></td>
            <td class="text-center">
              <%= form_with model: record, url: user_record_path(@user, record), method: :patch do |f| %>
                <%= f.text_field :weight, pattern: "^[0-9]+$", size:"2", class: "form-control mb-1" %>
                <%= f.submit "保存", class: "form-control" %>
              <% end %>
            </td>
            <td class="text-center">
              <%= form_with model: record, url: user_record_path(@user, record), method: :patch do |f| %>
                <%= f.text_field :rep, pattern: "^[0-9]+$", size:"2", class: "form-control mb-1" %>
                <%= f.submit "保存", class: "form-control" %>
              <% end %>
            </td>
            <td class="text-center">
              <%= form_with model: record, url: user_record_path(@user, record), method: :patch do |f| %>
                <%= f.text_field :memo, pattern: "^[0-9]+$", size:"9", class: "form-control mb-1" %>
                <%= f.submit "保存", class: "form-control" %>
              <% end %>
            </td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>

<% if @user == current_user %>
<div class="row">
  <div class="col-6">
    <%= form_with model: @record, url: user_records_path, method: :post, class: "mb-4" do |f| %>
      <div class="form-group">
        <%= f.label :part_id, "部位", class: "form-label" %>
        <%= f.collection_select(:part_id, Part.all, :id, :name, {}, {class: "form-controll custom-select"}) %>
      </div>
      <div class="form-group">
        <%= f.label :exercise_id, "種目", class: "form-label" %>
        <%= f.collection_select(:exercise_id, Exercise.all, :id, :name, {}, {class: "form-controll custom-select"}) %>
      </div>
      <div class="form-group">
        <%= f.label :weight, "重量", pattern: "^[0-9]+$", class: "form-label" %>
        <%= f.text_field :weight, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :rep, "回数", pattern: "^[0-9]+$", class: "form-label" %>
        <%= f.text_field :rep, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :memo, "メモ", pattern: "^[0-9]+$", class: "form-label" %>
        <%= f.text_field :memo, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "トレーニングを記録", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-6">
    <%= form_with model: @part, url: user_records_parts_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.label :name, "部位", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "部位追加", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= form_with model: @exercise, url: user_records_exercises_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.label :name, "種目", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "種目追加", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
<h2 class="text-center"><%= link_to "過去の記録一覧", user_past_records_path %></h2>

